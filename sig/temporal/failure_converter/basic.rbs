module Temporal
  module FailureConverter
    class Basic < Base
      type payload_converter = Temporal::PayloadConverter::_PayloadConverter
      type failure_proto = Temporal::Api::Failure::V1::Failure
      type payloads_proto = Temporal::Api::Common::V1::Payloads

      def initialize: (?encode_common_attributes: bool) -> void
      def to_failure: (Exception, payload_converter) -> failure_proto
      def from_failure: (failure_proto, payload_converter) -> Temporal::Error::Failure

      private

      @encode_common_attributes: bool

      def encode_common_attributes?: -> bool
      def to_payloads: (Array[untyped]?, payload_converter) -> payloads_proto?
      def from_payloads: (payloads_proto?, payload_converter) -> Array[untyped]
      def apply_from_encoded_attributes: (failure_proto, payload_converter) -> failure_proto

      def to_application_failure: (Temporal::Error::ApplicationError, payload_converter) -> failure_proto
      def to_timeout_failure: (Temporal::Error::TimeoutError, payload_converter) -> failure_proto
      def to_cancelled_failure: (Temporal::Error::CancelledError, payload_converter) -> failure_proto
      def to_terminated_failure: (Temporal::Error::TerminatedError, payload_converter) -> failure_proto
      def to_server_failure: (Temporal::Error::ServerError, payload_converter) -> failure_proto
      def to_reset_workflow_failure: (Temporal::Error::ResetWorkflowError, payload_converter) -> failure_proto
      def to_activity_failure: (Temporal::Error::ActivityError, payload_converter) -> failure_proto
      def to_child_workflow_execution_failure: (Temporal::Error::ChildWorkflowError, payload_converter) -> failure_proto
      def to_generic_failure: (Exception, payload_converter) -> failure_proto

      def from_application_failure: (
        failure_proto,
        Temporal::Api::Failure::V1::ApplicationFailureInfo,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::ApplicationError
      def from_timeout_failure: (
        failure_proto,
        Temporal::Api::Failure::V1::TimeoutFailureInfo,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::TimeoutError
      def from_cancelled_failure: (
        failure_proto,
        Temporal::Api::Failure::V1::CanceledFailureInfo,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::CancelledError
      def from_terminated_failure: (
        failure_proto,
        Temporal::Api::Failure::V1::TerminatedFailureInfo,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::TerminatedError
      def from_server_failure: (
        failure_proto,
        Temporal::Api::Failure::V1::ServerFailureInfo,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::ServerError
      def from_reset_workflow_failure: (
        failure_proto,
        Temporal::Api::Failure::V1::ResetWorkflowFailureInfo,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::ResetWorkflowError
      def from_activity_failure: (
        failure_proto,
        Temporal::Api::Failure::V1::ActivityFailureInfo,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::ActivityError
      def from_child_workflow_execution_failure: (
        failure_proto,
        Temporal::Api::Failure::V1::ChildWorkflowExecutionFailureInfo,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::ChildWorkflowError
      def from_generic_failure: (
        failure_proto,
        Temporal::Error::Failure?,
        payload_converter
      ) -> Temporal::Error::Failure
    end
  end
end
